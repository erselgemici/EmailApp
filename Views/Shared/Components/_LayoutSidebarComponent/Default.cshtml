
@*
    Layout Sidebar
*@
<div class="col-md-3">
    <a href="/Message/SendMessage" class="btn btn-primary btn-block mb-3">Oluştur</a>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Klasörler</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="/Message/Inbox" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen Kutusu
                        <span class="badge bg-primary float-right">@ViewBag.InboxCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Message/Sendbox" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilenler
                        <span class="badge bg-primary float-right">@ViewBag.SentCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Message/Drafts" class="nav-link">
                        <i class="far fa-file-alt"></i> Taslaklar
                        <span class="badge bg-warning float-right">@ViewBag.DraftCount</span>
                    </a>
                </li>
               
                <li class="nav-item">
                    <a href="/Message/Trash" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                        <span class="badge bg-danger  float-right">@ViewBag.TrashCount</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Etiketler</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a href="/Message/Important" class="nav-link">
                        <i class="far fa-circle text-danger"></i> Önemli
                        <span class="badge bg-danger float-right">@ViewBag.ImportantCount</span>                    
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Message/Unread" class="nav-link">
                        <i class="far fa-envelope text-primary"></i> Okunmamışlar
                        <span class="badge bg-primary float-right">@ViewBag.UnreadCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Message/Archive" class="nav-link">
                        <i class="fas fa-archive text-success"></i> Arşiv
                        <span class="badge bg-success float-right">@ViewBag.ArchiveCount</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
